<h2>Create an Author</h2>
<%= form_tag authors_path, method: "post" do %>
  
  
  
  <%= conditional_tag :div, !@author.errors.details[:name].empty?, class: "field_with_errors" do%>
  <div class="field">
    <%= label_tag "name", "Name" %>
    <%= text_field_tag "name", @author.name %>
  </div>
  <%end%>


  
 <%= conditional_tag :div, !@author.errors.details[:email].empty?, class: "field_with_errors" do%>
  <div class="field">
    <%= label_tag "email", "Email" %>
    <%= text_field_tag "email", @author.email %>
  </div>
  <%end%>


   <%= conditional_tag :div, !@author.errors.details[:email].empty?, class: "field_with_errors" do%>
  <div class="field">
  <div class="field">
    <%= label_tag "phone_number", "Phone Number" %>
    <%= text_field_tag "phone_number", @author.phone_number %>
  </div>
  <%end%>


  <%= submit_tag "Create" %>
<% end %>

<% if @author.errors.any? %>
<div>

<ul id="error_explanation">
<%@author.errors.full_messages.each do |message|%>
 
  <li><%= message %></li>

<%end%>
</ul>
</div>
<%end%>
