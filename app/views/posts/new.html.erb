<h2>Create a post</h2>
<%= form_tag posts_path, method: "post" do %>
  
  
  
  <%= conditional_tag :div, !@post.errors.details[:title].empty?, class: "field_with_errors" do%>
  <div class="field">
    <%= label_tag "title", "Title" %>
    <%= text_field_tag "title", @post.title %>
  </div>
  <%end%>


  
 <%= conditional_tag :div, !@post.errors.details[:category].empty?, class: "field_with_errors" do%>
  <div class="field">
    <%= label_tag "category", "category" %>
    <%= text_field_tag "category", @post.category %>
  </div>
  <%end%>


   <%= conditional_tag :div, !@post.errors.details[:content].empty?, class: "field_with_errors" do%>
  <div class="field">
  <div class="field">
    <%= label_tag "content", "content" %>
    <%= text_field_tag "content", @post.content %>
  </div>
  <%end%>


  <%= submit_tag "Create" %>
<% end %>

<% if @post.errors.any? %>
<div>

<ul id="error_explanation">
<%@post.errors.full_messages.each do |message|%>
 
  <li><%= message %></li>

<%end%>
</ul>
</div>
<%end%>